%h4
  .hole-num= link_to ("#" + hole.number.to_s), hole_path(hole)
  .sg= hole.hole_total_sg.round(3)
%table.table.table-responsive.table-hover.table-condensed
  %thead
    %tr
      %th #
      %th Start Distance
      %th Surface
      %th Penalty
      %th PGA Strokes
      %th Strokes Gained
  %tbody
    - hole.strokes.each do |stroke|
      %tr
        %td= stroke.number
        %td= stroke.start_distance
        %td= stroke.surface
        %td= stroke.penalty
        %td= stroke.pro_strokes.round(3)
        %td= stroke.strokes_gained.round(3)
